@import "nib"
@import "_variables"

partner-size = 300px + 30px * 2

.partner-list
  display: flex
  flex-flow: row wrap
  justify-content: space-around

.partner-item-wrap
  width: partner-size
  align-self: center

.partner-item
  padding: 30px
  display: block

.partner-logo
  display: block
  width: 100%
  height: auto

#partner-contact-link
  text-align: center
  padding: 30px 0 30px

.partner-section-title
  font-weight: bold
  font-size: 1.5em
  line-height: 1em
  padding: 1em 0
  text-align: center