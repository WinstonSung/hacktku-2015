// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #444
color-gray = #999
color-border = #e3e3e3
color-background = #fff
color-ocean = #003381
color-link = lighten(color-ocean, 20%)
color-link-hover = lighten(color-link, 10%)

// Typography
font-chinese = "Hiragino Sans GB", "Microsoft JhengHei", "微軟正黑體"
font-sans = "Helvetica Neue", Helvetica, Arial, font-chinese, sans-serif
font-serif = Garamond, Georgia, "Times New Roman", serif
font-title = "Exo 2", font-sans
font-size = 15px
line-height = 1.6em

// Layout
max-width = 1000px
gutter-width = 20px
map-height = 300px

// Media queries
mq-mobile = "screen and (max-width: 768px)"
mq-normal = "screen and (min-width: 769px)"