@import "nib"
@import "_variables"

#intro-inner
  max-width: 600px

.intro-theme-wrap
  text-align: center

.intro-theme
  display: inline-block
  width: 80px
  height: @width
  font-size: 35px
  line-height: @height - 2px
  margin: 15px 25px
  border: 1px dashed color-border
  border-radius: 50%
  color: color-ocean