@import "nib"
@import "_variables"

sponsor-size = 300px + 30px * 2

#sponsor-list
  display: flex
  flex-flow: row wrap
  justify-content: space-around

.sponsor-item-wrap
  width: sponsor-size
  align-self: center

.sponsor-item
  padding: 30px
  display: block

.sponsor-logo
  display: block
  width: 100%
  height: auto

#sponsor-contact-link
  text-align: center
  padding: 30px 0 30px

#sponsor-contact-desc
  margin: 1em 0