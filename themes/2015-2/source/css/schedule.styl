@import "nib"
@import "_variables"

#schedule-inner
  @media mq-normal
    margin: 0 -30px -30px

.schedule-list-wrap
  padding: 30px 0
  @media mq-normal
    float: left
    width: 50%
    padding-left: 30px
    padding-right: 30px

.schedule-list-header
  clearfix()
  border-bottom: 3px solid color-border
  padding-bottom: 0.5em
  line-height: font-size * 1.5

.schedule-list-date
  font-weight: bold
  font-size: 1.5em
  float: left
  color: color-ocean

.schedule-list-day
  float: left
  color: color-gray
  &:before
    content: "-"
    padding: 0 0.5em

.schedule-list
  padding-top: 15px
  width: 100%
  line-height: line-height
  td
    padding-top: 6px
    padding-bottom: 6px
    tr:nth-child(2n) &
      background: #f2f2f2

.schedule-time
  font-weight: bold
  width: 80px
  text-align: right
  padding-right: 20px