#banner
  text-align: center
  padding: 60px 0

#banner-logo
  width: 200px
  height: 200px
  image: "images/logo.png" @width @height
  margin: auto

#banner-title
  font-family: font-title
  font-weight: bold
  font-size: 2.5em
  margin-top: 0.8em
  line-height: 1
  display: block
  &:before, &:after
    opacity: 0.6
    font-weight: 300
  &:before
    content: "{"
    padding-right: 5px
  &:after
    content: "}"
    padding-left: 5px
  span
    font-weight: 300
    &:before
      content: ":"
      padding-right: 5px

#banner-desc
  margin: 1em 0 2.5em
  line-height: line-height

#countdown
  display: flex
  font-family: font-title
  margin: 2.5em 0
  justify-content: center

.countdown-group
  font-size: 2.5em
  &:not(:last-child):after
    content: ":"
    opacity: 0.5

.countdown-digit
  display: block
  float: left